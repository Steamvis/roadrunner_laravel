################################################################
########################## DOCKER ##############################
################################################################
####################### INSTALLATION ###########################
################################################################

init: build up

build:
	docker-compose build

################################################################
################### DOCKER CONTROLLING #########################
################################################################

up:
	docker-compose up -d

down:
	docker-compose down

restart: down up

watch-logs:
	docker-compose up

logs:
	docker-compose logs


################################################################
################### CONTROLLING BACKEND ########################
################################################################

php-cli:
	docker-compose run --rm --no-deps php-cli bash
